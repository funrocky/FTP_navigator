<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-10dp"
    tools:context=".MainActivity_conn_info">

    <TextView
        android:id="@+id/conninfo_name"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="Name"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_ip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conninfo_ip"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="ip地址"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_isvail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_name" />

    <TextView
        android:id="@+id/conninfo_isvail"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="可用状态"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_ip" />

    <TextView
        android:id="@+id/conninfo_port"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="端口"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_isvail" />

    <TextView
        android:id="@+id/conninfo_user"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="用户名"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_port" />

    <TextView
        android:id="@+id/conninfo_password"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="密码"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_user" />

    <TextView
        android:id="@+id/conninfo_info"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="1dp"
        android:text="备注"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_password" />

    <TextView
        android:id="@+id/conninfo_status"
        android:layout_width="169dp"
        android:layout_height="89dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="1dp"
        android:text="连接状态"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_info" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="#E30D3F"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toEndOf="@+id/conninfo_status"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="删除此连接"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/floatingActionButton2"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/floatingActionButton2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="连接名   ："
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="IP地址    ："
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_ip"
        app:layout_constraintTop_toTopOf="@+id/conninfo_ip" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可用状态："
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/conninfo_isvail"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_isvail" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="端口       ："
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_port"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_isvail" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名   ："
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/conninfo_user"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_user" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码       ："
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_password"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_user" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注       ："
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/conninfo_info"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_info" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="连接状态："
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/conninfo_status"
        app:layout_constraintEnd_toStartOf="@+id/conninfo_status"
        app:layout_constraintTop_toBottomOf="@+id/conninfo_info"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>